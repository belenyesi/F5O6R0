def longestPS(s):
    palindrom = ''
    for i in range(len(s)):
        for j in range(i+1,len(s)+1):
            if (s[i:j]).lower()==(s[i:j][::-1]).lower():   #nem különbözteti meg a kis és nagybetűket
                if j-i > len(palindrom):
                    palindrom = s[i:j]
    return palindrom

print(longestPS('kék 100 asztal kerek a kerek nyár')
